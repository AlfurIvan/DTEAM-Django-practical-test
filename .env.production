# .env.production
# Production environment variables for DigitalOcean Droplet
# Copy this file to .env and update the values

# Django settings
DEBUG=False
SECRET_KEY=your-very-long-random-secret-key-change-this-in-production
DJANGO_SETTINGS_MODULE=core.droplet_settings

# Server settings
DROPLET_IP=your.droplet.ip.address
DOMAIN_NAME=your-domain.com

# Database settings (PostgreSQL in Docker)
DATABASE_NAME=cv_project_db
DATABASE_USER=cv_project_user
DATABASE_PASSWORD=your-secure-database-password-123

# Redis settings
REDIS_PASSWORD=your-redis-password

# Email settings
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password
EMAIL_FROM=your-email@gmail.com

# OpenAI settings
OPENAI_API_KEY=sk-your-openai-api-key-here

# SSL settings
USE_HTTPS=False
